# This file is a template for the environment variables required by the application.
# Copy this file to .env and fill in the values for your local development environment.

# Database Credentials
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASS=password
DB_NAME=my_database

# This must match the MYSQL_ROOT_PASSWORD used by the 'db' service in docker-compose.yml
MYSQL_ROOT_PASSWORD=password

# Email API (Sendinblue/Brevo)
SENDINBLUE_API_KEY=your_api_key_here
